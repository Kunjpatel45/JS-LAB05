<%
    let action = "";
    let firstName = "";
    let lastName = "";
    let nickname = "";
    let email = "";
    let avatar = "";
    let method = "post";

    if (typeof user !== "undefined") {
        action = `/${user.id}`;
        firstName = user.firstName;
        lastName = user.lastName;
        nickname = user.nickname;
        email = user.email;
        avatar = user.avatar;
        method = "put";
    }
%>

<form action="/users<%= action %>" method="post" class="mt-3" enctype="multipart/form-data" style="background-color: #f9caca; padding: 20px; border-radius: 10px;">
    <input type="hidden" name="_method" value="<%= method %>">

    <div class="mb-3">
        <label for="firstName" class="form-label" style="color: #ff6b6b;">First Name:</label>
        <input type="text" class="form-control" id="firstName" name="firstName" required value="<%= firstName %>" style="background-color: #ffeaa7; color: #2d3436;">
    </div>

    <div class="mb-3">
        <label for="lastName" class="form-label" style="color: #ff6b6b;">Last Name:</label>
        <input type="text" class="form-control" id="lastName" name="lastName" required value="<%= lastName %>" style="background-color: #ffeaa7; color: #2d3436;">
    </div>

    <div class="mb-3">
        <label for="email" class="form-label" style="color: #ff6b6b;">Email:</label>
        <input type="email" class="form-control" id="email" name="email" required value="<%= email %>" style="background-color: #ffeaa7; color: #2d3436;">
    </div>

    <div class="mb-3">
        <label for="nickname" class="form-label" style="color: #ff6b6b;">Nickname:</label>
        <input type="text" class="form-control" id="nickname" name="nickname" required value="<%= nickname %>" style="background-color: #ffeaa7; color: #2d3436;">
    </div>

    <div class="mb-3">
        <label for="password" class="form-label" style="color: #ff6b6b;">Password:</label>
        <input type="password" class="form-control" id="password" name="password" required style="background-color: #ffeaa7; color: #2d3436;">
    </div>

    <div class="mb-3">
        <label for="avatar" class="form-label" style="color: #ff6b6b;">Avatar:</label>
        <input type="file" class="form-control" id="avatar" name="avatar" value="<%= avatar %>" style="background-color: #ffeaa7; color: #2d3436;">
    </div>

    <button type="submit" class="btn btn-primary" style="background-color: #6ab04c; border-color: #6ab04c;">Submit</button>
</form>
