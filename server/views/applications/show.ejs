<%- include("../shared/_header") %>

<div class="container mt-5" style="background-color: #ffd700; padding: 20px;">
    <h1 style="color: #ff4500;">Application Credentials</h1>

    <hr class="my-5" style="border-color: #ff4500;">

    <a href="/applications/<%= application.id %>/edit" style="color: #800080;">Edit application credentials</a>

    <ul class="list-group list-group-horizontal my-3" style="background-color: #ffa07a;">
        <li class="list-group-item" style="color: #2e8b57;">Application Name:</li>
        <li class="list-group-item" style="color: #2e8b57;"><%= application.name %></li>
    </ul>

    <ul class="list-group list-group-horizontal my-3" style="background-color: #ff7f50;">
        <li class="list-group-item" style="color: #2f4f4f;">Application Key:</li>
        <li class="list-group-item" style="color: #2f4f4f;"><%= application.key %></li>
    </ul>

    <ul class="list-group list-group-horizontal my-3" style="background-color: #7b68ee;">
        <li class="list-group-item" style="color: #fffafa;">Application Secret:</li>
        <li class="list-group-item" style="color: #fffafa;"><%= application.secret %></li>
    </ul>

    <a href="/applications" style="color: #8a2be2;">Back to applications</a>
</div>

<%- include("../shared/_footer") %>
