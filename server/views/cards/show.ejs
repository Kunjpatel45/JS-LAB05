<%- include("../shared/_header") %>

<div class="container mt-5">
    <h1 style="color: #ff6b6b;">Cards List</h1>

    <hr class="my-5" style="background-color: #ff6b6b;">

    <a href="/cards/<%= card.id %>/edit" class="btn btn-success">Edit Card</a>

    <div class="card ca-card <%= card.type === 'QUESTION' ? 'bg-dark text-white' : 'bg-white text-dark' %>" style="background-color: #3498db;">
        <div class="card-body">
            <p class="card-text">
                <%= card.content.replace(/\[blank\d+\]/g, "______") %>
            </p>
        </div>
    </div>

    <a href="/cards" class="btn btn-danger">Back to Cards</a>
</div>

<%- include("../shared/_footer") %>
