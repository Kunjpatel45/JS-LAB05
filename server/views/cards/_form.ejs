<%
    let action = "";
    let content = "";
    let cardType = "";
    let method = "post";

    if (typeof card !== "undefined") {
        action = `/${card.id}`;
        content = card.content;
        cardType = card.type;
        method = "put";
    }
%>

<form action="/cards<%= action %>" method="post" class="mt-3" style="background-color: #f0e68c; padding: 20px; border-radius: 10px;">
    <input type="hidden" name="_method" value="<%= method %>">

    <div class="mb-3">
        <label for="content" class="form-label" style="color: #8b4513;">Content:</label>
        <input type="text" class="form-control" id="content" name="content" required value="<%= content %>" style="background-color: #ffd700;">
    </div>

    <div class="mb-3">
        <label for="type" class="form-label" style="color: #8b4513;">Type:</label>
        <select id="type" name="type" class="form-select" required style="background-color: #ffd700;">
            <% cardTypes.forEach(function(type) { %>
                <option value="<%= type %>" <%= type === cardType ? "selected" : "" %> style="background-color: #ffd700;">
                    <%= type %>
                </option>
            <% }); %>
        </select>
    </div>

    <!-- Include other fields as necessary -->

    <button type="submit" class="btn btn-primary" style="background-color: #8b4513;">Submit</button>
</form>
