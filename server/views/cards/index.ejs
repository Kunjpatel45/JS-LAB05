<%- include("../shared/_header") %>

<div class="container mt-5" style="background-color: yellow;">
    <h1>Cards List</h1>

    <hr class="my-5">

    <a href="/cards/new" style="display: inline-block; background-color: green; color: white; padding: 10px 20px; text-decoration: none;">Create a new card</a>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Content</th>
                <th>Author</th>
                <th>Type</th>
                <th>Last Updated</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            <% if (cards && cards.length > 0) { %>
                <% cards.forEach(({ id, author, content, type, updatedAt }) => { %>
                    <tr>
                        <td><%= content %></td>
                        <td>
                            <%= author?.nickname %>
                        </td>
                        <td><%= type %></td>
                        <td><%= updatedAt %></td>
                        <td>
                            <a href="/cards/<%= id %>" style="background-color: green; color: white; padding: 5px 10px; text-decoration: none; margin-right: 5px;">View</a>
                            <a href="/cards/<%= id %>/edit" style="background-color: green; color: white; padding: 5px 10px; text-decoration: none; margin-right: 5px;">Edit</a>
                            <form action="/cards/<%= id %>" method="post" onsubmit="return confirm('Are you sure you want to delete this card?')" style="display: inline-block;">
                                <input type="hidden" name="_method" value="delete">
                                <button style="background-color: green; color: white; padding: 5px 10px; border: none; cursor: pointer;">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>
</div>

<%- include("../shared/_footer") %>
